<!-- Show all decades by name with a list of albums associated with that decade -->
<!-- List decades from current to 1860’s -->

<!-- Retrieve release count for each decade based on release_date -->
<% @releases.by_decade.each do |decade, releases| %>
  <div class="row">
    <div class="page-content-header-object">
      <div class="page-content-header">
        <div class="page-content-header-text"><%= decades_show_link(decade) %>s<span class="page-content-modifier-text"> Decade</span>    
        </div>
      </div>
    </div>
    
    <div class="row small-up-1 medium-up-2 large-up-3">
      <!-- 'releases' is a Release collection -->
  <% releases.each do |release| %>  
      <div class="column one-album-object">
        <%= albums_show_image_link(release.album) %>
        <div class="album-title">
          <%= albums_show_link(release.album) %>
        </div>
        <div class="album-artist">
          <%= artists_show_link(release.album.artist) %>
        </div> 
      </div>
    <% end %> <!-- end area.albums.each -->
    </div> <!-- row small-up-1 medium-up-2 large-up-3 -->
  </div> <!-- row -->
<% end %> <!-- end @areas.each -->

