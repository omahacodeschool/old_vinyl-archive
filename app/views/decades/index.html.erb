<!-- List decades from current to 1860’s -->
<!-- Retrieve release count for each decade based on artist start_year -->
<% @releases.info_by_decade.each do |decade, decades_releases| %>
  <br />
  <%= decades_show_link(decade) %>
    <br />
  <!-- 'decades_releases' is a Release collection -->
  <% decades_releases.each do |release| %>
  <!-- Calling 'album_info' on 'release' returns the Album object -->
    <br />
    <%= albums_show_image_link(release.album) %>
    <br />
    <%= albums_show_link(release.album) %>
    <br />
    <%= artists_show_link(release.album.artist) %>
  <% end %>
<% end %>


