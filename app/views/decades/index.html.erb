<!-- List decades from current to 1860’s -->
<!-- Retrieve release count for each decade based on artist start_year -->
<% @releases.info_by_decade.each do |decade, info| %>
  <br />
  <%= "#{decade}'s" %>
    <br />
  <!-- 'info' is a Release object -->
  <% info.each do |info| %>
  <!-- Calling 'album_info' on 'info' returns an Album object -->
    <% info.album_info.each do |album| %>
    <br />
      <%= albums_show_image_link(album) %>
      <br />
      <%= albums_show_link(album) %>
      <br />
      <%= artists_show_link(album.artist) %>
    <% end %>
  <% end %>
<% end %>


