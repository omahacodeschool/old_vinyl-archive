<!-- Show all areas by name with a list of albums associated with that area -->
<% @areas.each do |area| %>
  <br />
  <%= area_show_link(area) %>
  <br />
  <% area.with_these_albums.each do |area_album| %>
    <img src="<%= area_album.album_image.cover_image %>" style="width:100px;height:100px">
    <br />
    <%= album_show_link(area_album) %>
    <br />
    <%= area_album.artist.name %>
    <br />
  <% end %>
<% end %>

<!-- SIDEBAR NAVIGATION AREA BELOW -->

<!-- Retrieve info for first 3 genres ordered by most number of albums -->
<!-- Name -->
<!-- Count of albums associated with that genre -->
<% @genres.each do |genre| %>
  <br />
  <%= genre_show_link(genre) %>
  (<%= genre.with_these_albums.count %>)
<% end %>

<!-- List decades from 2010’s to 1960’s -->
<!-- Retrieve release count for each decade based on artist start_year -->
<% @releases.info_by_decade.each do |decade, album| %>
  <br />
  <%= "#{decade}'s (#{album.count})" %>
<% end %>

<!-- List first 3 or 5 formats based either on count of releases associated with that format or most common format types -->
<!-- Retrieve album count associated with that format type -->
<% @formats.each do |format| %>
  <br />
  <%= format_show_link(format) %>
  (<%= format.with_these_albums.count %>)
<% end %>