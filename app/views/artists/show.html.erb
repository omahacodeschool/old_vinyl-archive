<h1><%= @artist.name %></h1>

<img src="<%= @artist_images.image_1 %>" style="width:400px;height:300px">

<p><b>Hometown:</b> <%= @areas.name %> </p>
<p><b>Years Active:</b> <%= @artist.start_year %> - <%= @artist.end_year %> </p>

<p><b>Members:</b> 
  <% @artist.show_artist_members.each do |member| %>
    <p><%= member.first_name %> <%= member.last_name %></p>
  <% end %>
</p>

<p><b>Bio:</b> <%= @artist.bio %> </p>

<p><b>Albums:</b></p>
  <% @artist.show_artist_albums.each do |album| %>
    <p><img src="<%= x.album_image.cover_image %>" style="width:200px;height:200px"></p>
    <p><b><%= album.title %></b></p>
    <br>
  <% end %>
