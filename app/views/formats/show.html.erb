

<!-- Cycles through each release associated with a given format -->

<div class="page-content-header-object">
  <div class="page-content-header">
    <div class="page-content-header-text">
    <%= formats_show_link(@format) %> |<span class="page-content-modifier-text">Format</span>    
    </div>
 </div>
</div>

<div class="row small-up-1 medium-up-2 large-up-3">
  <% @format.albums.each do |album| %>
      <div class="column one-album-object">
        <%= albums_show_image_link(album) %>
        <div class="album-title">
          <%= albums_show_link(album) %>
        </div>
        <div class="album-artist">
          <%= artists_show_link(album.artist) %>
        </div> 
      </div>
  <% end %>
</div>