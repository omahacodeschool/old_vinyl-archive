



<!-- Show all formats with the titles of the albums associated with each format -->
<% @formats.each do |format| %>
  <div class="row">
    <div class="page-content-header-object">
      <div class="page-content-header">
        <div class="page-content-header-text"><%= formats_show_link(format) %><span class="page-content-modifier-text"> Format</span>    
        </div>
      </div>
    </div>
    
    <div class="row small-up-1 medium-up-2 large-up-3">
      <!-- 'releases' is a Release collection -->
  <% format.albums.each do |format_album| %>  
      <div class="column one-album-object">
        <%= albums_show_image_link(format_album) %>
        <div class="album-title">
          <%= albums_show_link(format_album) %>        
        </div>
        <div class="album-artist">
          <%= artists_show_link(format_album.artist) %>
        </div> 
      </div>
    <% end %> <!-- end area.albums.each -->
    </div> <!-- row small-up-1 medium-up-2 large-up-3 -->
  </div> <!-- row -->
<% end %> <!-- end @areas.each -->

   <!-- Pagination -->
