<!-- Show all genres with the titles of the albums associated with each genre -->
<% @genres.each do |genre| %>
  <br />
  <%= genres_show_link(genre) %>
  <% genre.with_these_albums.each do |genre_album| %>
    <br />
    <%= albums_show_image_link(genre_album) %>
    <br />
    <%= albums_show_link(genre_album) %>
    <br />
    <%= artists_show_link(genre_album.artist) %>
  <% end %>
<% end %>

