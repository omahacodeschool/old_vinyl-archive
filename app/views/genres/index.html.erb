<!-- Show all genres with the titles of the albums associated with each genre -->
<% @genres.each do |genre| %>
  <div class="row">
    <div class="page-content-header-object">
      <div class="page-content-header">
        <div class="page-content-header-text"><%= genres_show_link(genre) %><span class="page-content-modifier-text"> Genre</span>    
        </div>
      </div>
    </div>
    
    <div class="row small-up-1 medium-up-2 large-up-3">
      <!-- 'releases' is a Release collection -->
  <% genre.albums.each do |genre_album| %>  
      <div class="column one-album-object">
        <%= albums_show_image_link(genre_album) %>
        <div class="album-title">
          <%= albums_show_link(genre_album) %>
        </div>
        <div class="album-artist">
          <%= artists_show_link(genre_album.artist) %>        
        </div> 
      </div>
    <% end %> <!-- end area.albums.each -->
    </div> <!-- row small-up-1 medium-up-2 large-up-3 -->
  </div> <!-- row -->
<% end %> <!-- end @areas.each -->

